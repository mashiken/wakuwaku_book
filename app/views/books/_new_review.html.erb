<%= form_with model: review, method: :post, local: true do |f| %>
　<div class="form-group">
		<%= f.label :title, "レビュータイトル" %>
    <em>　2文字以上、50文字以内でお願いします。</em>
	  <%= f.text_field :title, class: "form-control" %>
  </div>
  <div class="form-group">
  	<%= f.label :title, "レビュー文" %>
    <em>　10文字以上、600文字以内でお願いします。</em>
    <%= f.text_area :text, class: "form-control" %>
  </div>
  <% book_details.each do |book_detail| %>
	  <%= f.hidden_field :book_id, :value => book_detail.isbn %>
  <% end %>
  <div class="action">
  	<%= f.submit "レビューを送信" %>
  </div>
<% end %>
