
<table class=' table table-hover table-inverse order_table_text'>
	<thead>
		<tr>
			<th>MY本棚 書籍画像</th>
			<th>書籍タイトル / カナ</th>
			<th>著者名 / カナ</th>
			<th>出版社名</th>
			<th>発売日</th>
			<th></th>
		<tr>
	</thead>

  <% book_shelves.each do |book_shelf| %>
	  <% books = RakutenWebService::Books::Book.search(isbn: book_shelf.book_id.to_i) %>
	  <% books.each do |book| %>
			<tbody>
				<tr>
					<td><%= link_to (image_tag(book.medium_image_url)), book_path(book_shelf.book_id.to_i) %></td>
					<td>
						<%= book.title %> <%= book.title_kana %>
					</td>
					<td><%= book.author %> <%= book.author_kana %></td>
					<td><%= book.publisher_name %></td>
					<td><%= book.sales_date %></td>
					<td><%= link_to "書籍決定",  finish_recommended_book_path(id: recommended_user.id, book_id: book_shelf.book_id), class: "btn btn-md btn-danger" %></td>
				<tr>
			</tbody>
	  <% end %>
	<% end %>
</table>