
<h4>検索結果:<%= books_full.count %>件</h4>
<table class="table table-striped">
	<thead>
		<tr>
			<th>商品画像</th>
			<th>書籍タイトル / カナ</th>
			<th>著者名 / カナ</th>
			<th>出版社名</th>
			<th>発売日</th>
			<th>書籍確定</th>
			<th>書籍詳細</th>
		<tr>
	</thead>

	<% books.each do |item| %>
		<tbody>
			<tr>
				<td><%= image_tag(item.medium_image_url) %></td>
				<td>
					<%= item.title %><br><%= item.title_kana %>
				</td>
				<td><%= item.author %><br><%= item.author_kana %></td>
				<td><%= item.publisher_name %></td>
				<td><%= item.sales_date %></td>
				<td><%= link_to "書籍決定",  finish_recommended_book_path(id: recommended_user.id, book_id: item.isbn), class: "btn btn-md btn-success" %></td>
				<td><%= link_to "詳細情報",  book_path(item.isbn), class: "btn btn-md btn-info" %></td>
			<tr>
		</tbody>
  <% end %>
  <%= paginate books, class: "paginate" %>
</table>
