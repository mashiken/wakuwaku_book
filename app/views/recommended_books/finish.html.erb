<h4>オススメ書籍 確認フォーム</h4>
 <!-- 宛名 -->
<h5 style="font-weight:bold"><%= @recommended_user.nickname %>さんへ</h5>
<!-- エラーメッセージ -->
<% if @recommended_book.errors.any? %>
  <div class="alert alert-danger">
    <div>
        <h2><%= pluralize(@recommended_book.errors.count, "件") %> のエラーです。</h2>

        <ul>
            <% @recommended_book.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  </div>
<% end %>

<%= form_with model: @recommended_book , method: :post, local: true do |form| %>

  <div class="row">
    <div class="col-md-4 col-xs-12">
      <% @book_details.each do |book_detail| %>
          <%= image_tag(book_detail.large_image_url) %><br>
          <div class="recommend-field">
            <%= book_detail.title %><%= book_detail.title_kana %>
          </div>
        <%= form.hidden_field :book_id, :value => book_detail.isbn %>
      <% end %>
    </div>
    <div class="col-md-8 col-xs-12">
      <div class="recommend-field">
        <p style="font-weight:bold">おすすめタイトル</p>
        <em>2文字以上、50文字以内でお願いします。</em>
        <%= form.text_field :title, autofocus: true %>
      </div>
      <div class="recommend-field">
        <p style="font-weight:bold">おすすめ文</p>
        <em>10文字以上、600文字以内でお願いします。</em>
        <%= form.text_area :text, autofocus: true %>
      </div>

      <%= form.hidden_field :recommended_user_id, :value => @recommended_user.id %>
    	<p><%= form.submit '送信する', class: "btn btn-success" %></p>
    </div>
  </div>
<% end %>