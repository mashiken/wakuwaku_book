<h4>書籍レビュー一覧</h4>

<div><%= @user.nickname %>さんのレビュー</div>

<!-- ユザーに関するの書籍レビュー/おすすめ数へのリンク -->
<%= render partial: "users/link_index", locals: { reviews: @reviews, recommended: @recommended, recommended_user: @recommended_user, books: @books } %>

<% @reviews.each do |review| %>
　  <%= link_to(user_path(review.user_id), class: 'list-content') do %>
		<table class=' table table-hover table-inverse order_table_text'>
			<% books = RakutenWebService::Books::Book.search(isbn: review.book_id.to_i) %>
            <% books.each do |book| %>
                 <tr>
				  <td><%= link_to (image_tag(book.medium_image_url)), book.item_url %> <%= book.title %></td>
			  </tr>
            <% end %>
			<tr><td><%= review.title %></td></tr>
			<tr><td><%= review.text %></td></tr>
	    </table>
    <% end %>
<% end %>