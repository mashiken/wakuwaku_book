<h4>編集</h4>

<% if @user.errors.any? %>
    <div>
        <h2><%= pluralize(@user.errors.count, "error") %> prohibited this book from being saved:</h2>

        <ul>
            <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<%= form_with model: @user ,url: user_path(@user) , method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.label :image, "ユーザー画像" %>
    <%= f.attachment_field :image %>
  </div>
  <div class="field">
    <%= f.label :nickname, "ニックネーム" %>
    <%= f.text_field :nickname, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :gender, "性別(未記入でも大丈夫です。)" %>
    <%= f.text_field :gender, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :age, "年齢(未記入でも大丈夫です。)" %>
    <%= f.number_field :age, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :profession, "職業(未記入でも大丈夫です。)" %>
    <%= f.text_field :profession, autofocus: true, class: "form-control" %>
  </div>
  <div class="field">
    <%= f.label :profile, "プロフィール(未記入でも大丈夫です。)" %>
    <%= f.text_area :profile, autofocus: true,  size: "10x5"  %>
  </div>
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
