<h4>編集</h4>
<%= form_with model: @user ,url: user_path(@user) , method: :patch, local: true do |f| %>
  <div class="field">
    <%= f.attachment_field :image %>
  </div>
  <div class="field">
    <%= f.label :family_name, "(姓)" %>
    <%= f.text_field :family_name, autofocus: true %>
    <%= f.label :given_name, "(名)" %>
    <%= f.text_field :given_name, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :family_name_kana, "(セイ)" %>
    <%= f.text_field :family_name_kana, autofocus: true %>
    <%= f.label :given_name_kana, "(メイ)" %>
    <%= f.text_field :given_name_kana, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :gender, "性別(未記入でも大丈夫です。)" %>
    <%= f.text_field :gender, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :age, "年齢(未記入でも大丈夫です。)" %>
    <%= f.text_field :age, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :profession, "職業(未記入でも大丈夫です。)" %>
    <%= f.text_field :profession, autofocus: true %>
  </div>
  <div class="field">
    <%= f.label :profile, "プロフィール(未記入でも大丈夫です。)" %>
    <%= f.text_field :profile, autofocus: true %>
  </div>
  <div class="actions">
    <%= f.submit "登録する" %>
  </div>
<% end %>
